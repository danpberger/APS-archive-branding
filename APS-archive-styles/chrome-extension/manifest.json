{
  "manifest_version": 3,
  "name": "APS Archive Branding POC",
  "version": "1.0.0",
  "description": "Injects APS branding CSS and JavaScript into archive.aps.org for testing/POC purposes",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://archive.aps.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "APS Archive Branding Controls",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://archive.aps.org/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "archive-branding.css",
        "archive-enhancements.js"
      ],
      "matches": [
        "https://archive.aps.org/*"
      ]
    }
  ]
}
